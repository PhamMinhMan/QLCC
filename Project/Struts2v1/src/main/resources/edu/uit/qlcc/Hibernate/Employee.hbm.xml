<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="edu.uit.qlcc.common.Employee" table="employee" catalog="qlcc">
        <id name="empCode" type="java.lang.String">
            <column name="emp_code" length="4" />
             <generator class="identity" />
        </id>
        <property name="empName" type="string">
            <column name="emp_name" length="45" not-null="true" />
        </property>
        <property name="comCode" type="string">
            <column name="com_code" length="4" not-null="true"  />
        </property>
         <property name="address" type="string">
            <column name="address" length="45" not-null="true"  />
        </property>
         <property name="phone" type="string">
            <column name="phone" length="12" not-null="true" />
        </property>
         <property name="empPassword" type="string">
            <column name="emp_password" length="15" not-null="true"  />
        </property>
         <property name="createCode" type="string">
            <column name="create_code" length="4" />
        </property>
         <property name="createDate" type="string">
            <column name="create_date" length="45"/>
        </property>
         <property name="updateCode" type="string">
            <column name="update_code" length="4" />
        </property>
         <property name="updateDate" type="string">
            <column name="update_date" length="45"  />
        </property>
         <property name="flagDelete" type="string">
            <column name="flag_delete" length="1"  />
        </property>
    </class>
</hibernate-mapping>